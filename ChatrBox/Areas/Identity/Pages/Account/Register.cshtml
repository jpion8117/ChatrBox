@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div>
    <div class="logo-container" style="background-color:#202225;width:2000px;height:2000px;">
        <img src="~/Images/24.png" width="400px;" height="400px;">

<h1>@ViewData["Title"]</h1>
<div class="center">
    <div class="row">
        <h2>Create a new account.</h2>
        
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                 <input asp-for="Input.Email" value="Email" class="form-control" autocomplete="email" aria-required="true" />
                 <label asp-for="Input.Email"></label>
                 <span asp-validation-for="Input.Email" class="text-danger" ></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Username" value="Username"class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Username"></label>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" Value="..." class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" value="..." class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
          </form>
    </div>
    
</div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
