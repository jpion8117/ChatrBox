@model ChatrBox.Data.Community

@{
    ViewData["Title"] = "Edit";
}
<div>
<h1>Edit</h1>

<h4>Community</h4>
<hr />
<div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="OwnerId" class="control-label"></label>
                <input asp-for="OwnerId" class="form-control" />
                <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Visibility" class="control-label"></label>
                    <select asp-for="Visibility" class="form-control">
                        <option value="" class="text-muted" selected disabled hidden>--- Select Visibility ---</option>
                        <option value="0">Closed</option>
                        <option value="1">Private</option>
                        <option value="2">Protected</option>
                        <option value="3">ProtectedPlus</option>
                        <option value="4">Public</option>
                        <option value="5">Open</option>
                    </select>

                    <span asp-validation-for="Visibility" class="text-danger"></span>
                </div>
            <div class="form-group" hidden>
                <label asp-for="ContentFilter" class="control-label"></label>
                <select asp-for="ContentFilter" class="form-control">
                        <option value="0" selected>Select Filter</option>
                </select>
                <span asp-validation-for="ContentFilter" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ImageHash" class="control-label"></label>
                <input asp-for="ImageHash" class="form-control" />
                <span asp-validation-for="ImageHash" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
