@model ChatrBox.Data.Topic

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Topic</h4>
<hr />
<div class="row" style="background-color: #36393f;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-white">
                <label asp-for="Name" class="control-label text-white"></label>
                <input asp-for="Name" placeholder="Name your topic..." class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="Description" class="control-labe text-whitel"></label>
                <textarea asp-for="Description" placeholder="Describe the purpose of this topic..." class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <!-- Hidden field not yet implemented -->
                <label asp-for="PostPermission" class="control-label"></label>
                <select asp-for="PostPermission" class="form-control">
                    <option value="0" selected>Open</option>
                    <option value="1">Closed</option>
                </select>
                <span asp-validation-for="PostPermission" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="LastPost" class="control-label"></label>
                <input asp-for="LastPost" class="form-control" />
                <span asp-validation-for="LastPost" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CommunityId" class="control-label"></label>
                <input asp-for="CommunityId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index" asp-route-communityId="@Model.CommunityId">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
